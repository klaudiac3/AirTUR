---
// src/components/Header.astro
import { companyConfig } from '../data/companyConfig';
---

<header class="sticky top-0 z-50 bg-white shadow-md font-sans">
  <!-- Kontener na pen szeroko -->
  <div class="w-full px-4 sm:px-6 lg:px-8 xl:px-12">
    
    <!-- Wysoko h-24 dla du偶ego logo -->
    <div class="flex justify-between items-center h-24">
      
      <!-- LEWA STRONA: DU呕E LOGO -->
      <div class="flex-shrink-0 cursor-pointer mr-4">
        <a href="/">
          <img 
            class="h-16 md:h-20 w-auto object-contain" 
            src="/logo.svg" 
            alt={`${companyConfig.name} Logo`} 
            onerror="this.style.display='none'; document.getElementById('logo-text').style.display='block';" 
          />
          <span id="logo-text" style="display:none;" class="text-2xl font-bold text-airtur-navy">{companyConfig.name}</span>
        </a>
      </div>

      <!-- RODEK: MENU GWNE (Tylko Desktop) -->
      <nav class="hidden lg:flex lg:space-x-4 xl:space-x-8 text-sm font-medium text-airtur-dark whitespace-nowrap">
        <a href="/" class="hover:text-airtur-blue transition">Strona G贸wna</a>
        <a href="/oferta" class="hover:text-airtur-blue transition">Oferta</a>
        <a href="/narzedzia" class="hover:text-airtur-blue transition">Narzdzia</a>
        <a href="/studia-przypadkow" class="hover:text-airtur-blue transition">Studia Przypadk贸w</a>
        <a href="/baza-wiedzy" class="hover:text-airtur-blue transition">Baza Wiedzy</a>
        <a href="/o-firmie" class="hover:text-airtur-blue transition">O Firmie</a>
        <a href="/kontakt" class="hover:text-airtur-blue transition">Kontakt</a>
      </nav>

      <!-- PRAWA STRONA: KONTAKT + CTA (Tylko Desktop) -->
      <div class="hidden lg:flex items-center gap-4 xl:gap-8 ml-4">
        
        <!-- Kolumna Kontaktowa (Telefon na g贸rze, Email na dole) -->
        <div class="flex flex-col items-end gap-0.5">
          <!-- Telefon -->
          <a href={companyConfig.contact.phoneLink} class="flex items-center gap-2 text-airtur-dark font-semibold hover:text-airtur-blue transition whitespace-nowrap">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4 text-airtur-blue">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 0 0 2.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 0 1-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 0 0-1.091-.852H4.5A2.25 2.25 0 0 0 2.25 4.5v2.25Z" />
              </svg>
            <span class="text-base xl:text-lg leading-none">{companyConfig.contact.phone}</span>
          </a>
          
          <!-- E-mail (Mniejszy pod spodem) -->
          <a href={companyConfig.contact.emailLink} class="flex items-center gap-2 text-gray-400 hover:text-airtur-blue transition text-[11px] xl:text-xs font-medium">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-3">
              <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75" />
            </svg>
            {companyConfig.contact.email}
          </a>
        </div>
        
        <!-- Przycisk CTA -->
        <a href="/kontakt" class="bg-airtur-blue text-white px-4 xl:px-8 py-3 xl:py-4 rounded font-bold text-[10px] xl:text-xs tracking-wide hover:bg-opacity-90 transition shadow-md uppercase text-center whitespace-nowrap">
          ZAMW BEZPATN ANALIZ I WYCEN
        </a>
      </div>

      <!-- IKONA HAMBURGERA (Tylko Mobilne) -->
      <div class="lg:hidden flex items-center">
        <button id="mobile-menu-button" class="text-airtur-dark hover:text-airtur-blue focus:outline-none">
          <svg class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- MENU MOBILNE -->
  <div id="mobile-menu" class="hidden lg:hidden bg-white border-t border-gray-100 h-screen absolute w-full shadow-xl top-24 left-0 z-50">
    <nav class="flex flex-col p-6 space-y-4 text-lg">
      <a href="/" class="block text-airtur-dark font-medium hover:text-airtur-blue">Strona G贸wna</a>
      <a href="/oferta" class="block text-airtur-dark font-medium hover:text-airtur-blue">Oferta</a>
      <a href="/narzedzia" class="block text-airtur-dark font-medium hover:text-airtur-blue">Narzdzia</a>
      <a href="/studia-przypadkow" class="block text-airtur-dark font-medium hover:text-airtur-blue">Studia Przypadk贸w</a>
      <a href="/baza-wiedzy" class="block text-airtur-dark font-medium hover:text-airtur-blue">Baza Wiedzy</a>
      <a href="/o-firmie" class="block text-airtur-dark font-medium hover:text-airtur-blue">O Firmie</a>
      <a href="/kontakt" class="block text-airtur-dark font-medium hover:text-airtur-blue">Kontakt</a>
      
      <div class="pt-6 mt-6 border-t border-gray-100 flex flex-col gap-4">
        <a href="/kontakt" class="block w-full text-center bg-airtur-blue text-white py-4 rounded font-bold text-lg shadow-md uppercase">
            ZAMW BEZPATN ANALIZ I WYCEN
        </a>
        <a href={companyConfig.contact.phoneLink} class="block w-full text-center text-airtur-dark font-semibold text-lg flex justify-center items-center gap-2">
            <span></span> Zadzwo: {companyConfig.contact.phone}
        </a>
        <a href={companyConfig.contact.emailLink} class="block w-full text-center text-gray-500 font-medium text-base flex justify-center items-center gap-2">
            <span>锔</span> {companyConfig.contact.email}
        </a>
      </div>
    </nav>
  </div>
</header>

<script>
  const btn = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');

  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>