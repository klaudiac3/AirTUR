<script is:inline>
const toggleBtn = document.getElementById('toggle-phone-form');
const phoneContainer = document.getElementById('phone-form-container');
const arrowIcon = document.getElementById('arrow-icon');

toggleBtn?.addEventListener('click', () => {
    const isHidden = phoneContainer.classList.contains('hidden');
    phoneContainer.classList.toggle('hidden');
    arrowIcon?.classList.toggle('rotate-180');
});

document.addEventListener('DOMContentLoaded', () => {
    const fixSavingsData = (form) => {
        const savingsRaw = document.getElementById('savings-year')?.innerText || "0";
        const savingsClean = savingsRaw.replace(/[^\d]/g, '');
        const modelRaw = document.getElementById('final-model-name')?.innerText || "Nie wybrano modelu";

        //  POBIERAMY DANE Z TABELKI W KROKU 4
        const ecoRaw = document.getElementById('table-eco-name')?.innerText || "";
        const smartRaw = document.getElementById('table-smart-name')?.innerText || "";
        const premiumRaw = document.getElementById('table-premium-name')?.innerText || "";

        const savingsInput = form.querySelector('.calc-field-savings');
        const modelInput = form.querySelector('.calc-field-model');
        const ecoInput = form.querySelector('.calc-field-model-eco');
        const smartInput = form.querySelector('.calc-field-model-smart');
        const premiumInput = form.querySelector('.calc-field-model-premium');
        
        if (savingsInput) savingsInput.value = savingsClean;
        if (modelInput) modelInput.value = modelRaw;
        
        // Zapisujemy dodatkowe modele do wysyki
        if (ecoInput) ecoInput.value = ecoRaw;
        if (smartInput) smartInput.value = smartRaw;
        if (premiumInput) premiumInput.value = premiumRaw;
    };

    const forms = document.querySelectorAll('#tools-form-email, #tools-form-phone');
    const isValidEmail = (email) => /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email);
    const isValidPhone = (phone) => phone.replace(/\D/g, "").length >= 9;

    forms.forEach(form => {
        form.addEventListener('submit', async (e) => {
            e.preventDefault(); 
            
            fixSavingsData(form);
            
            const targetForm = e.target;
            const submitBtn = targetForm.querySelector('.submit-btn');

            const emailInput = targetForm.querySelector('input[name="email"]');
            const phoneInput = targetForm.querySelector('input[name="telefon"]');
            const consent = targetForm.querySelector('input[name="zgoda"]');

            let hasError = false;

            if (emailInput && !isValidEmail(emailInput.value)) {
                hasError = true;
            }
            
            if (phoneInput) {
                const isRequired = phoneInput.hasAttribute('required');
                const isNotEmpty = phoneInput.value.trim() !== "";
                if ((isRequired || isNotEmpty) && !isValidPhone(phoneInput.value)) {
                    hasError = true;
                }
            }

            if (!consent.checked) {
                hasError = true;
            }

            if (hasError) {
                const errorId = targetForm.id === 'tools-form-email' ? 'error-tools-mail' : 'error-tools-phone';
                const errorDiv = document.getElementById(errorId);
                if(errorDiv) {
                    if (!consent.checked) {
                        errorDiv.innerText = "Musisz zaakceptowa Regulamin oraz Polityk Prywatnoci, aby wysa zgoszenie.";
                    } else {
                        errorDiv.innerText = targetForm.id === 'tools-form-email' 
                            ? "Wprowad藕 poprawne dane i zaakceptuj zgody." 
                            : "Numer min. 9 cyfr oraz wymagana zgoda.";
                    }
                    errorDiv.classList.remove('hidden');
                }
                return;
            }

            if (submitBtn) {
                submitBtn.disabled = true;
                submitBtn.style.opacity = "0.7";
                submitBtn.innerText = "GENEROWANIE...";
            }

            const formData = new FormData(targetForm);
            const dataObj = Object.fromEntries(formData.entries());

            try {
                const response = await fetch('/api/send-form', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(dataObj)
                });
                
                if (!response.ok) throw new Error('Bd serwera');

                const result = await response.json();

                if (result.pdfBase64) {
                    try {
                        sessionStorage.setItem('currentReportPdf', result.pdfBase64);
                        sessionStorage.setItem('currentReportFilename', `Raport_AirTUR_${result.reportId || 'Nowy'}.pdf`);
                    } catch (storageError) {
                        console.error("Storage error:", storageError);
                    }
                }

                const params = new URLSearchParams();
                params.append('cel', 'raport'); 
                if (dataObj.wynik_cel?.includes('ogrzewanie')) params.set('cel', 'ogrzewanie');
                if (dataObj.wynik_cel?.includes('chodzenie')) params.set('cel', 'chlodzenie');
                
                params.append('reportId', result.reportId || 'PENDING');
                params.append('imie', dataObj.imie || 'Klient');
                
                [
                    'wynik_metraz', 'wynik_moc', 'wynik_oszczednosci', 'wynik_model', 
                    'wynik_cel', 'wynik_paliwo', 'wynik_rachunek', 'wynik_typ_budynku',
                    'wynik_wybrany_tier', 'wynik_model_eco', 'wynik_model_smart', 'wynik_model_premium'
                ].forEach(key => {
                    const val = dataObj[key];
                    if(val) params.append(key.replace('wynik_', ''), val);
                });

                window.location.assign(`/podziekowanie/index.html?${params.toString()}`);

            } catch (error) {
                console.error("Submission Error:", error);
                alert("Wystpi bd. Prosimy spr贸bowa ponownie.");
                if (submitBtn) {
                    submitBtn.disabled = false;
                    submitBtn.style.opacity = "1";
                    submitBtn.innerText = "SPRBUJ PONOWNIE";
                }
            }
        });
    });

    document.querySelectorAll('input').forEach(input => {
        input.addEventListener('input', () => {
            document.getElementById('error-tools-mail')?.classList.add('hidden');
            document.getElementById('error-tools-phone')?.classList.add('hidden');
        });
        if(input.type === 'checkbox') {
             input.addEventListener('change', () => {
                document.getElementById('error-tools-mail')?.classList.add('hidden');
                document.getElementById('error-tools-phone')?.classList.add('hidden');
             });
        }
    });
});
</script>

