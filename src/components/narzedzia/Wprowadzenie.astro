---
// src/components/narzedzia/Wprowadzenie.astro
---

<!-- Tło szare, nowoczesny layout centralny -->
<section class="bg-gray-50 pt-28 pb-10 border-b border-gray-200">
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <div class="flex flex-col items-center justify-center">
      
      <!-- NAGŁÓWEK: Mniejszy, elegancki, wyśrodkowany -->
      <div class="text-center mb-10 max-w-2xl">
        <h1 class="text-2xl md:text-3xl font-bold text-airtur-dark tracking-tight mb-2">
          Centrum Kontroli <span class="text-airtur-blue">Inwestycji</span>
        </h1>
        <p class="text-xs md:text-sm text-gray-500 font-medium tracking-wide uppercase">
          W 3 krokach dobierz moc i oszacuj zwrot
        </p>
      </div>

      <!-- STEPPER (LINIA POSTĘPU): Wyśrodkowany -->
      <!-- max-w-3xl sprawia, że kółka są blisko siebie, nie rozjeżdżają się na boki -->
      <div class="w-full max-w-3xl relative px-4">
        
        <!-- Pasek tła -->
        <div class="absolute top-1/2 left-4 right-4 h-1 bg-gray-200 -translate-y-1/2 rounded-full -z-0"></div>
        
        <!-- Pasek aktywny (ID progress-line jest kluczowe dla JS) -->
        <div id="progress-line" class="absolute top-1/2 left-4 h-1 bg-airtur-blue -translate-y-1/2 rounded-full transition-all duration-700 ease-out -z-0" style="width: 0%;"></div>

        <!-- KROKI -->
        <div class="relative z-10 flex justify-between w-full">
          
          <!-- KROK 1 -->
          <div class="flex flex-col items-center group cursor-default">
            <div class="w-10 h-10 md:w-12 md:h-12 rounded-full flex items-center justify-center bg-airtur-blue text-white font-bold text-sm md:text-lg ring-4 ring-gray-50 shadow-sm transition-all duration-500">
              1
            </div>
            <span class="mt-3 text-[10px] md:text-xs font-bold text-airtur-dark uppercase tracking-wider bg-gray-50 px-2 rounded">
              Cel
            </span>
          </div>

          <!-- KROK 2 -->
          <div class="flex flex-col items-center group cursor-default">
            <div class="w-10 h-10 md:w-12 md:h-12 rounded-full flex items-center justify-center bg-white text-gray-400 font-bold text-sm md:text-lg ring-4 ring-gray-50 border-2 border-gray-200 shadow-sm transition-all duration-500">
              2
            </div>
            <span class="mt-3 text-[10px] md:text-xs font-medium text-gray-400 uppercase tracking-wider bg-gray-50 px-2 rounded">
              Moc
            </span>
          </div>

          <!-- KROK 3 -->
          <div class="flex flex-col items-center group cursor-default">
            <div class="w-10 h-10 md:w-12 md:h-12 rounded-full flex items-center justify-center bg-white text-gray-400 font-bold text-sm md:text-lg ring-4 ring-gray-50 border-2 border-gray-200 shadow-sm transition-all duration-500">
              3
            </div>
            <span class="mt-3 text-[10px] md:text-xs font-medium text-gray-400 uppercase tracking-wider bg-gray-50 px-2 rounded">
              Wynik
            </span>
          </div>

        </div>
      </div>

    </div>

  </div>
</section>