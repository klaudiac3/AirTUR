---
// src/components/Footer.astro
import { companyConfig } from '../data/companyConfig';
const currentYear = new Date().getFullYear();
---

<!-- Tło: airtur-dark (#3A4149), Tekst: Biały -->
<footer class="bg-airtur-dark text-white font-sans pt-16">
  <!-- Większy padding boczny dla elegancji -->
  <div class="max-w-7xl mx-auto px-6 sm:px-8 lg:px-12">
    
    <!-- GŁÓWNA STRUKTURA STOPKI (4 KOLUMNY) -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-10 lg:gap-16 pb-10">
      
      <!-- KOLUMNA 1: Na skróty -->
      <div>
        <h4 class="text-lg font-bold text-white mb-4">Na skróty<br class="hidden lg:inline" /></h4>
        <nav class="space-y-2 text-sm">
          <a href="/o-firmie" class="block text-gray-300 hover:text-airtur-blue transition">O&nbsp;firmie</a>
          <a href="/studia-przypadkow" class="block text-gray-300 hover:text-airtur-blue transition">Studia Przypadków</a>
          <a href="/baza-wiedzy" class="block text-gray-300 hover:text-airtur-blue transition">Baza Wiedzy</a>
          <a href="/narzedzia" class="block text-gray-300 hover:text-airtur-blue transition">Narzędzia</a>
          <a href="/kontakt" class="block text-gray-300 hover:text-airtur-blue transition">Kontakt</a>
          
          <!-- SEKCJA PRAWNA -->
          <div class="pt-4 mt-4 border-t border-white/5 space-y-2">
            <a href="/regulamin" class="block text-xs text-gray-400 hover:text-airtur-blue transition">Regulamin</a>
            <a href="/polityka-prywatnosci" class="block text-xs text-gray-400 hover:text-airtur-blue transition">Polityka Prywatności</a>
            <a href="/polityka-cookies" class="block text-xs text-gray-400 hover:text-airtur-blue transition">Polityka Cookies</a>
          </div>
        </nav>
      </div>

      <!-- KOLUMNA 2: Kluczowe Usługi (SEO) -->
      <div>
        <h4 class="text-lg font-bold text-white mb-4">Kluczowe Usługi<br class="hidden lg:inline" /></h4>
        <nav class="space-y-2 text-sm">
          <a href="/oferta#montaz" class="block text-gray-300 hover:text-airtur-blue transition">Montaż klimatyzacji z&nbsp;funkcją grzania</a>
          <a href="/oferta#serwis" class="block text-gray-300 hover:text-airtur-blue transition">Serwis i&nbsp;przeglądy gwarancyjne</a>
          <a href="/oferta#analiza" class="block text-gray-300 hover:text-airtur-blue transition">Sprzedaż systemów o&nbsp;wysokim ROI</a>
          <a href="/kontakt" class="block text-gray-300 hover:text-airtur-blue transition">Bezpłatne doradztwo inwestycyjne</a>
        </nav>
      </div>

      <!-- KOLUMNA 3: Dane Firmy (Automatyczne) -->
      <div class="col-span-2 md:col-span-1">
        <h4 class="text-lg font-bold text-white mb-4">{companyConfig.name} – Twój Partner w&nbsp;Małopolsce</h4>
        <div class="space-y-2 text-sm pt-0.5"> 
          <p class="font-semibold text-gray-200">{companyConfig.fullName}</p>
          <p>NIP: {companyConfig.nip}</p>
          <p>Adres: {companyConfig.address.full}</p>
          <p>Telefon: <a href={companyConfig.contact.phoneLink} class="text-white hover:text-airtur-blue transition">{companyConfig.contact.phoneFull}</a></p>
          <p>E-mail: <a href={companyConfig.contact.emailLink} class="text-white hover:text-airtur-blue transition">{companyConfig.contact.email}</a></p>
        </div>
      </div>

      <!-- KOLUMNA 4: Obszar Działania (Automatyczny z serviceAreas) -->
      <div>
        <h4 class="text-lg font-bold text-white mb-4">Obszar Działania - Małopolska i okolice</h4>
        <p class="text-gray-300 text-sm mb-3">Działamy profesjonalnie w&nbsp;całym regionie:</p>
        <ul class="space-y-1 text-sm text-gray-300">
          {companyConfig.serviceAreas.map((area) => (
            area.places.map((place) => (
                <li class="flex items-center gap-2">
                    <span class="text-airtur-blue text-[10px]">●</span>
                    {place.label}
                </li>
            ))
          ))}
          <li class="pt-2 text-[11px] italic text-gray-400">...oraz wybrane lokalizacje do&nbsp;200km.</li>
        </ul>
      </div>

    </div>

    <!-- PASEK COPYRIGHT (Na samym dole) -->
    <div class="border-t border-white/10 pt-4 pb-4 text-center text-xs">
      <p class="text-gray-400">
        &copy; {currentYear} {companyConfig.name} - Pełna kontrola nad Twoim komfortem i&nbsp;budżetem.
      </p>
    </div>

  </div>
</footer>