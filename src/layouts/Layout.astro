---
// src/layouts/Layout.astro
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import MobileStickyBar from '../components/MobileStickyBar.astro';
import CookieBanner from '../components/CookieBanner.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { 
  title, 
  description = "AirTUR - Ekspercki montaż i serwis klimatyzacji, pomp ciepła oraz rekuperacji. Działamy w Krakowie, Nowym Sączu i całej Małopolsce.",
  image = "/og-image.jpg" 
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site || 'https://airtur.pl');
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- DOKŁADNA PACZKA FAVICON Z TWOJEGO KODU -->
    <link rel="icon" type="image/png" href="/favicon-96x96.png?v=2" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg?v=2" />
    <link rel="shortcut icon" href="/favicon.ico?v=2" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png?v=2" />
    <meta name="apple-mobile-web-app-title" content="AirTUR" />
    <link rel="manifest" href="/site.webmanifest?v=2" />
    <meta name="theme-color" content="#ffffff">
    
    <!-- SEO: Tytuł i Opis -->
    <title>{title} - AirTUR</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph / Facebook / Messenger -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={`${title} - AirTUR`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, canonicalURL.origin)} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={`${title} - AirTUR`} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, canonicalURL.origin)} />

    <!-- DANE STRUKTURALNE (JSON-LD) -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "HomeAndConstructionBusiness",
      "name": "AirTUR - Klimatyzacja i Inżynieria Komfortu",
      "image": "https://airtur.pl/logo/logo.svg",
      "@id": "https://airtur.pl",
      "url": "https://airtur.pl",
      "telephone": "+48XXXXXXXXX",
      "priceRange": "$$",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "Zarzecze 9",
        "addressLocality": "Łącko",
        "postalCode": "33-390",
        "addressRegion": "Małopolskie",
        "addressCountry": "PL"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": 49.555,
        "longitude": 20.444
      },
      "areaServed": [
        { "@type": "AdministrativeArea", "name": "Małopolskie" },
        { "@type": "AdministrativeArea", "name": "Śląskie" },
        { "@type": "AdministrativeArea", "name": "Podkarpackie" },
        { "@type": "City", "name": "Kraków" },
        { "@type": "City", "name": "Skawina" },
        { "@type": "City", "name": "Wieliczka" },
        { "@type": "City", "name": "Niepołomice" },
        { "@type": "City", "name": "Zabierzów" },
        { "@type": "City", "name": "Myślenice" },
        { "@type": "City", "name": "Bochnia" },
        { "@type": "City", "name": "Brzesko" },
        { "@type": "City", "name": "Miechów" },
        { "@type": "City", "name": "Olkusz" },
        { "@type": "City", "name": "Limanowa" },
        { "@type": "City", "name": "Mszana Dolna" },
        { "@type": "City", "name": "Tymbark" },
        { "@type": "City", "name": "Nowy Sącz" },
        { "@type": "City", "name": "Stary Sącz" },
        { "@type": "City", "name": "Krynica-Zdrój" },
        { "@type": "City", "name": "Grybów" },
        { "@type": "City", "name": "Nowy Targ" },
        { "@type": "City", "name": "Zakopane" },
        { "@type": "City", "name": "Rabka-Zdrój" },
        { "@type": "City", "name": "Szczawnica" },
        { "@type": "City", "name": "Tarnów" },
        { "@type": "City", "name": "Wojnicz" },
        { "@type": "City", "name": "Tuchów" },
        { "@type": "City", "name": "Żabno" },
        { "@type": "City", "name": "Gorlice" },
        { "@type": "City", "name": "Biecz" },
        { "@type": "City", "name": "Wadowice" },
        { "@type": "City", "name": "Oświęcim" }
      ],
      "hasOfferCatalog": {
        "@type": "OfferCatalog",
        "name": "Usługi AirTUR",
        "itemListElement": [
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Montaż klimatyzacji",
              "description": "Profesjonalny montaż systemów klimatyzacji typu Split i Multi-Split."
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Serwis i odgrzybialnie klimatyzacji",
              "description": "Kompleksowy serwis, czyszczenie parownika oraz uzupełnianie czynnika."
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Montaż pomp ciepła",
              "description": "Instalacja ekologicznych systemów grzewczych."
            }
          }
        ]
      },
      "description": "Specjaliści od inżynierii komfortu. Oferujemy fachowy montaż i autoryzowany serwis klimatyzacji oraz pomp ciepła w całej Małopolsce.",
      "openingHours": "Mo-Fr 08:00-17:00"
    }
    </script>
  </head>
  <body class="bg-white text-airtur-dark font-sans flex flex-col min-h-screen">
    
    <Header />

    <main class="flex-grow">
      <slot />
    </main>

    <Footer />
    <MobileStickyBar />
    <CookieBanner />

    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const walker = document.createTreeWalker(document.body, NodeFilter.SHOW_TEXT, null, false);
        let node;
        while (node = walker.nextNode()) {
          if (['SCRIPT', 'STYLE', 'TEXTAREA'].includes(node.parentNode.nodeName)) continue;
          let text = node.nodeValue;
          if (text) {
            const newText = text.replace(/ ([aiouwz]) /gi, ' $1\u00A0');
            if (text !== newText) {
              node.nodeValue = newText;
            }
          }
        }
      });
    </script>
  </body>
</html>